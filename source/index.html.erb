---
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
  <div class="article">
    <h1><%= link_to article.title, article %></h1>
    <div class="article-info">
      <div class="profile"><%= image_tag(gravatar_for(article.authors.first.name.split('|').last)) %> </div>
      <p>Posted on <%= article.date.strftime('%b %e') %></p>
      <p>Written by <%= article.authors.first.name.split('|').first %></p>   
    </div>
    <div class="clear"></div>
    <p><%= article.body %></p>
  </div>
<% end %>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
