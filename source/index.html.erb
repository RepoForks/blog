---
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>
	<div class="article-header">
		<h1><%= link_to article.data.title, article %></h1>
		<div class="article-info">
			<p>Posted on
				<span>
					<i><b><%= article.date.strftime('%d %b %Y') %></b></i>
				</span>
			</p>
			<p>Written by
				<span>
					<i><b><%= article.authors.first.name.split('|').first %></b></i>
				</span>
			</p>
			<p>Tags:
				<% article.tags.each do |tag| %>
				<span class="tags"><%= link_to tag, tag_path(tag) %></span>
				<% end %>
			</p>
		</div>
		<div class="clear"></div>
	</div>					
	<div class="article">
		<div class="article-content">
			<p><%= article.body %></p>
		</div>	
	</div>
<% end %>

<% if paginate && num_pages > 1 %>
	<% if prev_page %>
		<p class="newer"><%= link_to 'Newer articles', prev_page %></p>
	<% end %>
<% end %>

<% if paginate %>
	<% if next_page %>
		<p class="older"><%= link_to 'Older articles', next_page %></p>
	<% end %>
<% end %>
