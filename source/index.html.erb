---
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>
  <div class="article">
    <h1><%= link_to article.title, article %></h1>
    <div class="article-info">
      <div class="profile"><%= image_tag(gravatar_for(article.authors.first.name.split('|').last)) %> </div>
      <p>Posted on <%= article.date.strftime('%d %b %Y') %></p>
      <p>Written by <%= article.authors.first.name.split('|').first %></p>   
      <p>Tags:
        <% article.tags.each do |tag| %>
        <span><%= link_to tag, tag_path(tag) %></span>
        <% end %>
      </p>
    </div>
    <div class="clear"></div>
    <p><%= article.body %></p>
  </div>
<% end %>

<% if paginate && num_pages > 1 %>
  <% if prev_page %>
    <p><%= link_to 'Newer articles', prev_page %></p>
  <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Older articles', next_page %></p>
  <% end %>
<% end %>
