<!doctype html>
<html>
	<head>
		<meta charset="utf-8">

		<!-- Always force latest IE rendering engine or request Chrome Frame -->
		<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
		<meta name=viewport content="width=device-width, initial-scale=1.0" />
		<meta name=apple-mobile-web-app-capable content=yes>

		<!-- Use title if it's in the page YAML frontmatter -->
		<title><%= "#{current_page.data.title} | Bitrise" %></title>

		<%= stylesheet_link_tag "normalize", "all" %>
		<%= stylesheet_link_tag '//fonts.googleapis.com/css?family=Source+Code+Pro' %>
		<%= stylesheet_link_tag '//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,700,300,600' %>
		<%= javascript_include_tag  "all" %>
	</head>

	<body class="<%= page_classes %>">
		<div class="navigation">
			<a href="/">
				<img src="/images/bitrise_blog_logo.png" alt="Bitrise logo" id="logo" />
			</a>
			<div class="right">
				<div class="btn">
					<a href="https://www.bitrise.io" class="white">Register <span>for free</span></a>
				</div>
			</div>
		</div>
		<div class="content">
			<div class="main subpage">
				<div class="overlay"></div>
			</div>
			<div class="wrapper">
				<div class="articles">
					<div class="articles-inner">
						<div class="article-header">
							<p class="date">
								<%= current_page.date.strftime('%d %b %Y') %>
							</p>
							<h1><%= link_to current_page.data.title, current_page %></h1>
							<div class="article-info">
								<p class="profile">Written by
									<span>
										<i><b><%= current_page.authors.first.name.split('|').first %></b></i>
									</span>
								</p>
								<p>
									<% current_page.tags.each do |tag| %>
									<span class="tags"><%= link_to tag, tag_path(tag) %></span>
									<% end %>
								</p>
							</div>
							<div class="clear"></div>
						</div>
						<div class="article">
							<p><%= current_page.body %>
								<blockquote>
									<p class="contact-us">As always if you have any issues or suggestion you can
										<span>
											<a href="https://www.bitrise.io/contact?utm_source=blog&utm_medium=blog&utm_campaign=bitrise">contact us</a></span>, submit your idea on
										<span>
											<a href="https://bitrise.uservoice.com/">UserVoice</a>
										</span>
										or leave a comment below, we're happy to help and to discuss about Bitrise.
									</p>
								</blockquote>
							</p>
						</div>
					</div>
					<div class="recent-articles-mobile">
						<h3>Recent articles</h3>
						<ul>
							<% blog.articles[0...5].each do |article| %>
								<li><a href="<%= article.url %>"><%= article.title %></a></li>
							<% end %>
						</ul>
					</div>
					<div class="comments">
						<%= disqus %>
					</div>
				</div>
				<div class="articles-addon subpage">
					<div class="articles-addon-inner">
						<section>
							<li class="top">
								<div class="icon archive">
									<a href="/archive.html">Archives</a>
								</div>
							</li>
							<li class="top">
								<div class="icon rss">
									<a href="/feed.xml">Atom feed</a>
								</div>
							</li>
						</section>
						<section class="posts">
							<h3>Recent articles</h3>
							<ul>
								<% blog.articles[0...10].each do |article| %>
									<li><a href="<%= article.url %>"><%= article.title %></a></li>
								<% end %>
							</ul>
						</section>
						<section>
							<h3>Tags</h3>
							<ul class="tags">
								<% tags.each do |tag| %>
									<li><%= link_to tag.first, tag_path(tag.first) %> (<%= tag.last %>)</li>
								<% end %>
							</ul>
						</section>
					</div>
				</div>
				<div class="clear"></div>
			</div>
		</div>

		<div class="footer">
			<div class="left-menu">
				<p>Copyright Â© <%= Time.now.year %> Bitfall Kft.</p>
				<p class="slash">/</p>
				<a href="https://www.bitrise.io">BITRISE</a>
				<p class="slash">/</p>
				<a href="http://devcenter.bitrise.io">DEVCENTER</a>
			</div>
			<div class="right-menu">
				<a href="https://github.com/bitrise-io" class="github"></a>
				<a href="https://twitter.com/bitrise" class="twitter"></a>
			</div>
			<div class="clear"></div>
		</div>
	</body>
</html>
