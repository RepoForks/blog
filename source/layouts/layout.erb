<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Bitrise" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    <div class="navigation">
      <div class="wrapper">
       <a href="http://blog.bitrise.io/"><img id="logo"src="images/bitrise_blog_logo.png" alt=""></img></a>
        <!-- <h1>Bitrise is the easiest way to automate your development workflow</h1> -->
        <div class="right">
          <div class="btn"><a href="http://bitrise.io" class="white">Register for free</a></div>
        </div>
      </div>
    </div>
    <div class="content">       
    <div class="header">
          <h1>Bitrise is the easiest way to automate your development workflow</h1>
                    <hr>

        <div class="articles-addon">
          <div class="articles-addon-inner">
            <h3><a href="/archive.html">Archives</a></h3>
            <h3><a href="/feed.xml">RSS feed</a></h3>
            <h3>Recent articles</h3>
            <ul>
              <% blog.articles[0...10].each do |article| %>
                <li><a href="<%= article.url %>"><%= article.title %></a></li>


              <% end %>
            </ul>
            <h3>Tags</h3>
            <ul>
              <% tags.each do |tag| %>
                <li><%= link_to tag.first, tag_path(tag.first) %> (<%= tag.last %>)</li>
              <% end %>
            </ul>
          </div>
        </div>
          <div class="clear"></div>
        </div>
      <div class="wrapper">

        <div class="articles">

          <div class="articles-inner">
            <%= yield %>
          </div>
        </div>
        
        <div class="clear"></div>
      </div>
    </div>

    <div class="footer">
      <div class="wrapper">
        <div class="footer-col">
          <div class="footer-col-inner">
            <div class="title">Register an account</div>
            <div class="separator"></div>
